service cloud.firestore {
  match /databases/{database}/documents {
    match /mailchimp-emails/{document=**} {
      allow read: if request.auth.uid != null;
      allow write;
    }
    match /organizers/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /speakers/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /tickets/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /ticketDescriptions/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /invoices/{document=**} {
      allow read: if request.auth.uid != null;
      allow write;
    }
     match /mediaGraphics/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /mediaPress/{document=**} {
      allow read;
      allow write: if request.auth.uid != null;
    }
    match /mediaOthers/{document=**} {
       allow read;
       allow write: if request.auth.uid != null;
    }
    match /exchangeRates/{document=**} {
      allow read, write: if false;
    }
  }
}
